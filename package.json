{
  "name": "dynamic-terminal",
  "version": "1.0.0",
  "description": "An efficient and dynamic terminal experience",
  "author": "Marcus Cemes",
  "license": "Apache-2.0",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "files": [
    "LICENSE",
    "/dist"
  ],
  "repository": "https://github.com/MarcusCemes/dynamic-terminal",
  "bugs": {
    "url": "https://github.com/MarcusCemes/dynamic-terminal/issues"
  },
  "keywords": [
    "terminal",
    "log",
    "rewritable",
    "dynamic",
    "draft",
    "update",
    "console"
  ],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\"",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash dist test",
    "all": "run-s reset test"
  },
  "scripts-info": {
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint test the project",
    "watch": "Watch and rebuild the project on save",
    "reset": "Delete all untracked files and reset the repo to the last commit"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "ansi-escapes": "^3.2.0",
    "ansi-regex": "^4.0.0",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "elegant-spinner": "^1.0.1",
    "exit-hook": "^2.0.0",
    "figures": "^2.0.0",
    "indent-string": "^3.2.0",
    "strip-ansi": "^5.0.0",
    "uuid": "^3.3.2",
    "window-size": "^1.1.1",
    "wrap-ansi": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^11.11.3",
    "cz-conventional-changelog": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "semantic-release": "^15.13.3",
    "trash-cli": "^1.4.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": false,
    "proseWrap": "always",
    "printWidth": 100
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "readme",
          "release": "patch"
        }
      ]
    }
  }
}
